generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Line {
  id              String @id @default(uuid())
  productName     String
  productId       String
  price           Int
  baseColour      String
  faceplateColour String
  logoTypeLeft    String
  logoTypeRight   String
  logoColourLeft  String
  logoColourRight String
  orderId         Int?
  Order           Order? @relation(fields: [orderId], references: [id])
}

model Customer {
  email    String  @id
  name     String
  phone    String
  address1 String
  address2 String
  city     String
  province String
  zipcode  String
  Orders   Order[]
}

model Order {
  id            Int       @id @default(autoincrement())
  customerEmail String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  approved      Boolean   @default(false)
  lines         Line[]
  customer      Customer  @relation(fields: [customerEmail], references: [email])
  note          String    @default("")
  shippingId    String?
  shipping      Shipping?  @relation(fields: [shippingId], references: [id])
  Discount      Discount? @relation(fields: [discountCode], references: [code])
  discountCode  String?
}

model Discount {
  code    String  @id
  amount  Int
  // union type of percentage or fixed
  type    String  @default("percentage")
  enabled Boolean @default(true)
  Orders  Order[]
}

model Shipping {
  id      String  @id @default(uuid())
  name    String
  price   Int
  enabled Boolean @default(true)
  Orders  Order[]
}
